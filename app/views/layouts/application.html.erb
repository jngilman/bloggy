<!DOCTYPE html>
<html>
<head>
  <title>Bloggy</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>

  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" integrity="sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7" crossorigin="anonymous">

</head>
<body>
<nav class="navbar navbar-inverse">
  <div class="container-fluid">
    <div class="navbar-header">
      <%= link_to "Bloggy", root_path, class: "navbar-brand" %>
      
    </div>
    <ul class="nav navbar-nav">
      <li class="active"><%= link_to "Home", root_path %></li>
      <li class="dropdown">
        <a class="dropdown-toggle" data-toggle="dropdown" href="blog_posts#index">Blogs
        <span class="caret"></span></a>
        <ul class="dropdown-menu">
          <li><%= link_to "New Post", new_blog_post_path %></li>
          
        </ul>
        </li>
        
    </ul>
     <div class="nav navbar-right">
      <div class="container-fluid">
      <% if user_signed_in? %>
      <%= link_to "Edit Account", edit_user_registration_path, class: "glyphicon glyphicon-edit" %>
      <%= link_to "Your Posts", your_posts_path, class: "glyphicon glyphicon-th-list" %>
		  <%= link_to "sign out", destroy_user_session_path, method: :delete, class: "glyphicon glyphicon-log-out" %>
      <% else %>
      <%= link_to "Sign Up", new_user_registration_path, class: "glyphicon glyphicon-edit" %>
      <%= link_to "Sign In", new_user_session_path, class: "glyphicon glyphicon-log-out" %>
      <% end %>
      </div>
    </div>
  </div>
</nav>





<%= yield %>


<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
 <!-- Latest compiled and minified JavaScript -->
 <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js" integrity="sha384-0mSbJDEHialfmuBBQP6A4Qrprq5OVfW37PRR3j5ELqxss1yVqOtnepnHVP9aJ7xS" crossorigin="anonymous"></script>
</body>
</html>
